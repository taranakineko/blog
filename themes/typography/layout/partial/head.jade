meta(charset="utf-8")
meta(name="X-UA-Compatible", content="IE=edge")
meta(name="author", content= theme.author)
title
    block site_title
        = config.title
block description
    meta(name="description", content= config.description ? config.description : 'A Blog Powered By Hexo')

if page.keywords
    meta(name="keywords", content= page.keywords)
else
    meta(name="keywords" content= config.keywords ? config.keywords : theme.keywords ? theme.keywords : "")

meta(content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0",name="viewport")
meta(content="yes",name="apple-mobile-web-app-capable")
meta(content="black",name="apple-mobile-web-app-status-bar-style")
meta(content="telephone=no",name="format-detection")

meta(name="renderer",content="webkit")

//-社交
meta(name="og:url", content=config.url+'/'+page.path)
meta(name="twitter:site",content='https://twitter.com/'+theme.twitter)
meta(name="twitter:card",content="summary_large_image")
if page.title
    meta(name="og:title", content=page.title)
    meta(name="twitter:title",content=page.title)
    meta(name="og:description", content=page.desc)
    meta(name="twitter:description", content=page.desc)
else
    meta(name="og:title", content=config.title)
    meta(name="twitter:title",content=config.title)
    meta(name="og:description", content=config.description)
    meta(name="twitter:description", content=config.description)

if page.images
    meta(property="og:image", content=config.url+page.images)
    meta(property="twitter:image", content=config.url+page.images)
else
    meta(property="og:image", content=config.url+'/static/images/twitter-card.png')
    meta(property="twitter:image", content=config.url+'/static/images/twitter-card.png')

link(rel="short icon", href= config.url + "/images/favicon.ico",type="image/x-icon")
link(rel="preconnect" href="https://fonts.googleapis.com")
link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
link(rel="stylesheet", href= url_for('css/bootstrap.min.css'))
link(rel="stylesheet", href= url_for('css/font-awesome.min.css'))
//- link(rel="stylesheet", href= url_for('css/typography-custom-font.css'))
link(rel="stylesheet", href= url_for('css/style.css'), media="(prefers-color-scheme: light)")
link(rel="stylesheet", href= url_for('css/style-dark.css'), media="(prefers-color-scheme: dark)")
link(rel="alternate" type="application/atom+xml" title="ATOM 1.0" href="/atom.xml")
link(href="https://fonts.googleapis.com/css2?family=Noto+Color+Emoji&display=swap" rel="stylesheet")